---
apiVersion: v1 
kind: Namespace
metadata:
  name: zenda

---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: hello-deployment
  labels:
    env: production-deploy
spec:
  template:
    metadata:
      name: node-pod
      labels:
        app: webapp
    spec:
      containers:
        - name: nodejs
          image: pranavmurali1994/nodejs:v1.0 
          ports:
            - containerPort: 3000 
  selector:
    matchLabels:
       app: webapp
  replicas: 2 

--- 

apiVersion: v1
kind: Service
metadata:
  name: my-nodeport
spec:
  type: NodePort 
  selector:
     app: webapp
  ports:
    - protocol: TCP
      port: 80 
      targetPort: 3000
      nodePort: 30001

      