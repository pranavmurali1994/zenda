---
apiVersion: v1 
kind: Namespace
metadata:
  name: zenda

---
apiVersion: apps/v1
kind: Deployment
metadata:
  namespace: zenda 
  name: hello-deployment
  labels:
    env: production-deploy
spec:
  template:
    metadata:
      name: node-pod
      labels:
        app: webapp
    spec:
      containers:
        - name: nodejs
          image: pranavmurali1994/nodejs:v1.0 
          ports:
            - containerPort: 3000 
  selector:
    matchLabels:
       app: webapp
  replicas: 2 

--- 
apiVersion: v1 
kind: Service
metadata:
   namespace: zenda 
   name: mylbservice
spec: 
  type: LoadBalancer
  ports:
    - protocol: TCP
      port: 80 
      targetPort: 30001 
  selector:
    app: webapp

      